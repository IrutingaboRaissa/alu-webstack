global
        log /dev/log    local0
        log /dev/log    local1 notice        
        chroot /var/lib/haproxy
        stats socket /run/haproxy/admin.sock>        stats timeout 30s
        user haproxy
        group haproxy
        daemon

        # Default SSL material locations
        ca-base /etc/ssl/certs
        crt-base /etc/ssl/private

        # See: https://ssl-config.mozilla.or>        ssl-default-bind-ciphers ECDHE-ECDSA>        ssl-default-bind-ciphersuites TLS_AE>        ssl-default-bind-options ssl-min-ver>

defaults
log     global
        mode    http
        option  httplog
        option  dontlognull
        timeout connect 5000
        timeout client  50000
        timeout server  50000
        errorfile 400 /etc/haproxy/errors/40>        errorfile 403 /etc/haproxy/errors/40>        errorfile 408 /etc/haproxy/errors/40>        errorfile 500 /etc/haproxy/errors/50>        errorfile 502 /etc/haproxy/errors/50>        errorfile 503 /etc/haproxy/errors/50>        errorfile 504 /etc/haproxy/errors/50>

frontend raissa-frontend
        bind *:443 ssl crt  /etc/letsencrypt>        http-request add-header x-Forwarded->        http-request redirect scheme https i>        use_backend http_back
        default_backend raissa-backend  
 backend raissa-backend
        redirect scheme https if { ssl_fc }  
        balance roundrobin
        server 6119-web-01 34.233.119.111:80>        server 6119-web-02 107.23.182.166:80>
